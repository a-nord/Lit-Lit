   <section class="book-page flex justify-center bg-white border border-black-200 rounded-lg">
<div class="text-black ">
  <h2>Title: {{title}}</h2>
  <p>Author: {{author_name}}</p>

<div>
  <img
    src='https://covers.openlibrary.org/b/olid/{{cover_edition_key}}-M.jpg'
  />
  {{cover}}
</div>
<div class="text-black">
  {{rating}}
</div>
<div class=" text-black">
{{ reviews }}
<!-- this is the book review text box -->
<h1> Book Reviews</h1>
</div>
<div>
 
<form id='review-form'>

  <label for='review'>Submit a Review:</label><br />
  <textarea id='review box-border h-32 w-32 p-4 border-4 border-stone-950' name='review' rows='4' requiredstyle="review 10px border-black"></textarea><br />
</div>
<div>
  <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-3">Submit Review</button>
</div>
</form>
</section>
