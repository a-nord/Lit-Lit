<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Lit-Lit</title>
    <script src='https://cdn.tailwindcss.com'></script>
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <!--background-->
  <body class='bg-scroll bg-cover'>

    <!--navbar-->
    <nav class='bg-white'>
      <div class='container mx-auto flex justify-between items-center py-4'>
        <!-- Left-aligned logo -->
        <a href='' class='text-white text-2xl font-semibold flex items-center'>
          <img
            class='object-center logo w-30 h-30'
            src=''
            alt='logo'
            width='100'
            height='100'
          />
        </a>

        <!-- Login button aligned with logo to the right -->
        <ul class='flex space-x-4'>
          <li class='navbar-links'>
            <a
              href='/login'
              class='navbar-login hover:underline text-color-black'
            >Login</a>
          </li>
        </ul>
      </div>
      
      <div>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <button class="no-button" id="logout">logout</button>
        {{/if}}
      </div>


    </nav>

    

    {{{body}}}
  </body>
</html>